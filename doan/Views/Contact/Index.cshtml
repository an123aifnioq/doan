<script>
    // Hàm hiển thị hộp thoại thông báo
    function showMessageBox(message) {
        alert(message);
    }
</script>
@model doan.Models.Contact

@{
    ViewData["Title"] = "Contact";
}
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home/Index"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Liên hệ</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Thông tin shop</h5>
                        <ul>
                            <li>
                                <h6><i class="fa fa-map-marker"></i> Địa chỉ</h6>
                                <p>182 Lê duẩn, Thành Phố Vinh, Nghệ An</p>
                            </li>
                            <li>
                                <h6><i class="fa fa-phone"></i> Điện thoại</h6>
                                <p><span>123456789</span><span>123456789</span></p>
                            </li>
                            <li>
                                <h6><i class="fa fa-headphones"></i> Mọi thắc mắc xin gửi về email</h6>
                                <p>supportashion@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <div class="contact__form">
                        <h5>Gửi tin nhắn</h5>
                        <form asp-action="Index" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="Name" class="form-control" placeholder="Tên" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>                           

                            <div class="form-group">
                                <textarea asp-for="Message" class="form-control" placeholder="Nội dung tin nhắn"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <button type="submit" class="site-btn" onclick="showMessageBox('Tin nhắn đã được gửi!')">Gửi</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48158.305462977965!2d-74.13283844036356!3d41.02757295168286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2e440473470d7%3A0xcaf503ca2ee57958!2sSaddle%20River%2C%20NJ%2007458%2C%20USA!5e0!3m2!1sen!2sbd!4v1575917275626!5m2!1sen!2sbd"
                            height="780" style="border:0" allowfullscreen="">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
