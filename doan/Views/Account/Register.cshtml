@using doan.Utilities;
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home/Index"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Đăng ký</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Register Begin-->
<div class="register-box">
    <div class="card">
        <div class="card-body register-card-body">
            <h2 class="text-center mb-4">TẠO TÀI KHOẢN</h2>
            <form id="validate" asp-controller="Account" asp-action="Register">
                <div class="input-group mb-3">
                    <input type="text" id="Username" name="username" class="form-control" placeholder="Nhập tên đăng nhập">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Vui lòng nhập tên đăng ký.</div>
                </div>
                <div class="input-group mb-3">
                    <input type="text" name="fullname" class="form-control" placeholder="Nhập tên đầy đủ">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Vui lòng nhập tên đầy đủ.</div>
                </div>           
                <div class="input-group mb-3">
                    <input type="text" name="phone" class="form-control" placeholder="Nhập số điện thoại">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Vui lòng nhập số điện thoại.</div>
                </div>
                <div class="input-group mb-3">
                    <input type="text" name="email" class="form-control" placeholder="Nhập email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Vui lòng nhập email.</div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="Password" name="password" class="form-control" placeholder="Nhập mật khẩu">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                </div>
                <div class="input-group mb-3" style="border-right:1px;">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <div class="invalid-feedback">Mật khẩu nhập lại không khớp.</div>
                </div>
                <div style="margin-top: 7px;" id="CheckPasswordMatch"></div>
                <div style="color:red">@Functions._Message</div>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                            <label for="agreeTerms">
                                Đồng ý với <a href="#">điều khoản</a>
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Tạo</button>
            </form>
            <div class="mt-3">
                <p class="mb-1">
                    <a href="Login" class="text-center">Bạn đã có tài khoản?</a>
                </p>
            </div>
        </div>
    </div>
</div>
<!-- Register End-->

<style>
    .register-box {
        margin: auto; /* Đặt margin là auto để căn giữa */
        max-width: 400px; /* Đặt kích thước tối đa của card */
        padding: 20px;
    }

    .card {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Thêm độ đổ bóng để làm nổi bật card */
    }

    /* Thêm các điều chỉnh CSS khác theo nhu cầu của bạn */
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#validate").validate({
            rules: {
                Username: 'required',
                Password: 'required',
                ConfirmPassword: {
                    required: true,
                    equalTo: "#Password",
                },
            },
            messages: {
                Username: 'Tên đăng nhập không được để trống!',
                Password: 'Mật khẩu không được để trống!',
                ConfirmPassword: {
                    required: 'Xác nhận mật khẩu là bắt buộc!',
                    equalTo: 'Mật khẩu không khớp!',
                }
            },
        });
    });
</script>