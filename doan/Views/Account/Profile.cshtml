@model doan.Models.Account

@{
    ViewData["Title"] = "Profile";
}

<style>
    .profile-container {
        max-width: 400px;
        margin: auto;
        text-align: center;
        padding: 20px;
    }

    .profile-image {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin-bottom: 10px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .breadcrumb-option {
        margin-bottom: 20px;
    }
</style>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home/Index"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Thông tin cá nhân</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<div class="card profile-container">
    <img class="card-img-top profile-image" src="@Model.Image" alt="Avatar">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text">
            <strong>Tên đăng nhập:</strong> @Model.UserName<br>
            <strong>Email:</strong> @Model.Email<br>
            <strong>Số điện thoại:</strong> @Model.Phone
        </p>
        <a asp-action="UpdateProfile" class="btn btn-primary">Cập nhật thông tin</a>
        <a asp-action="ChangePassword" class="btn btn-secondary">Đổi mật khẩu</a>
    </div>
</div>
