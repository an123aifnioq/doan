<!-- Login Begin-->
<div class="card profile-container">
    <form asp-controller="Account" asp-action="UpdateProfile" method="post">
        <h2>THÔNG TIN MỚI</h2>
        <div class="form-group">
            <label for="fullname"></label>
            <input type="text" name="fullname" class="form-control" placeholder="Nhập họ tên mới">
        </div>
        <div class="form-group">
            <label for="phone"></label>
            <input type="text" name="phone" class="form-control" placeholder="Nhập số điện thoại mới">
        </div>
        <div class="form-group">
            <label for="email"></label>
            <input type="email" name="email" class="form-control" placeholder="Nhập email mới">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Profile" class="btn btn-secondary">Quay lại</a>
    </form>               
</div>
