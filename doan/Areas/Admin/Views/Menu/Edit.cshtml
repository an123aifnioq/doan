@model doan.Models.Menu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h2>Xác nhận sửa menu shop</h2>
                </div>

                <div class="container shadow p-5">
                    <div class="row pb-2">
                        <h2>Sửa menu shop</h2>
                    </div>

                    <form method="post" asp-action="Edit">
                        <div asp-validation-summary="All"></div>
                        <div class="form-row">
                            <input type="text" class="form-control mb-3" asp-for="MenuID" type="hidden" />
                            <div class="form-group col-md-3">
                                <label asp-for="Title">Tên menu</label>
                                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tên menu">
                                <span asp-validation-for="Title" class=" alert-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="Alias">Liên kết</label>
                                <input type="text" class="form-control mb-3" asp-for="Alias" placeholder="Nhập liên kết">
                                <span asp-validation-for="Alias" class=" alert-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="Levels">Cấp menu</label>
                                <select asp-for="Levels" class="form-select" id="Levels">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-froup col-md-3">
                                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                                <label asp-for="ParentID">Menu cha</label>
                                <select asp-for="ParentID"
                                        class="form-control"
                                        asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="MenuOrder">Thứ tự menu</label>
                                <input type="text" class="form-control mb-3" asp-for="MenuOrder" placeholder="Nhập thứ tự menu">
                                <span asp-validation-for="MenuOrder" class=" alert-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="Position">Vị trí menu</label>
                                <input type="text" class="form-control mb-3" asp-for="Position" placeholder="Nhập vị trí menu">
                                <span asp-validation-for="Position" class=" alert-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group mt-1 mb-1">
                                <label>
                                    @Html.CheckBox("IsActive", Model.IsActive)
                                    Hiển thị
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a href="javascript:history.back()" class="btn btn-info">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>