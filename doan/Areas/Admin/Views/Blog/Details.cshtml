@model doan.Models.Blog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết bài viết - @Model.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/admin/blogs">Quản lý bài viết</a></li>
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="@Model.Image" alt="@Model.Title">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <h2>@Model.Title</h2>
                            <p><strong>Liên kết bài viết:</strong> @Model.Alias</p>
                            <p><strong>Mô tả:</strong> @Model.Description</p>
                            <p><strong>Nội dung chi tiết:</strong> @Model.Detail</p>
                            <div class="mt-4">
                                <a class="btn btn-success" href="@Url.Action("Index", "Blog", new { id = Model.BlogID })">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
